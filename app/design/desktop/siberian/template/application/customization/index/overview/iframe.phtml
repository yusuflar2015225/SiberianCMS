<div id="formats_overview">
    <ul>
        <li class="left"><button class="default_button btn-block active overview_size" rel="iphone">iPhone 4</button></li>
        <li class="left"><button class="default_button btn-block overview_size" rel="iphone5">iPhone 5</button></li>
        <li class="left"><button class="default_button btn-block overview_size" rel="android">Android</button></li>
        <li class="left"><button class="default_button btn-block overview_size" rel="html5">HTML5</button></li>
    </ul>
</div>
<div class="clear">
    <div id="iphone">
        <div class="iphone_content">
            <p id="iphone_header" class="iphone_header toolbar_overview a-center"><?php echo date('H:m'); ?></p>
            <p id="android_header" class="android_header toolbar_overview a-right" style="display:none"><?php echo date('H:m'); ?></p>
            <iframe id="mobile_overview" src="<?php echo $this->getApplication()->getUrl("front/mobile_home/overview", array(), true); ?>" width="320" height="460" style="overflow: hidden;"></iframe>
        </div>
    </div>
</div>
<style>
    #formats_overview ul li button.overview_size {
        padding: 8px 10px;
    }

</style>
<script type="text/javascript">
    var overview = new Array();
    overview['iphone'] = { background: '<?php echo $this->getImage('customization/overview/iphone.png'); ?>', width: 320, height: 460, container_width: 380, container_height: 735, marginTop: 127, marginLeft: 35, toolbar: 'iphone_header' };
    overview['iphone5'] = { background: '<?php echo $this->getImage('customization/overview/iphone5.png'); ?>', width: 320, height: 550, container_width: 380, container_height: 805, marginTop: 117, marginLeft: 32, toolbar: 'iphone_header' };
    overview['android'] = { background: '<?php echo $this->getImage('customization/overview/android.png'); ?>', width: 363, height: 620, container_width: 400, container_height: 785, marginTop: 70, marginLeft: 18, toolbar: 'android_header' };
    overview['html5'] = { background: '<?php echo $this->getImage('customization/overview/html5.png'); ?>', width: 298, height: 531, container_width: 400, container_height: 730, marginTop: 75, marginLeft: 48, toolbar: '' };
    $('button.overview_size').click(function() {
        var sizes = overview[$(this).attr('rel')];
        if(sizes && !$(this).hasClass('active')) {

            $('#mobile_overview').attr('width', sizes.width)
                .attr('height', sizes.height)
            ;

            $('.toolbar_overview').hide();
            if(sizes.toolbar) $('#'+sizes.toolbar).show();

            $('#iphone').css('background-image', 'url('+sizes.background+')');
            $('#iphone').css({
                width: sizes.container_width,
                height: sizes.container_height
            });
            $('.iphone_content').css({
                'margin-top' : sizes.marginTop,
                'margin-left': sizes.marginLeft
            });

            $('.overview_size').removeClass('active');
            $(this).addClass('active');

            iframe.f.loader.show();

        }
    });

</script>